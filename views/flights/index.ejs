<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>FlightNo</th>
      <th>Departs</th>
    
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr style=`<%= f.departs < new Date() ? "color: red" : "color: black" %>`%>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><%= f._id %></td>
        <td><a href="/flights/<%= f._id %>"> Detail</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>